@model IEnumerable<Biblioteca_LAB.Models.GereAdmViewModel>

@{
    var alteracoesAdm = ViewBag.AlteracoesAdm;
}
<br />
<div id="tabela">
    <div id="searchContainer">
        <form asp-action="SearchAdmActions" method="post" data-ajax="true" data-ajax-method="post"
              data-ajax-update="#tabela" data-ajax-mode="replace">
            <div class="input-group">
                <input class="form-control search-box" type="text" id="searchString" name="searchString" placeholder="Pesquisa">
                <button type="submit" class="btn btn-orange-secondary-backoffice-search"><i class="bi bi-search"></i></button>
            </div>
        </form>
    </div>

    <br />


    <table class="table table-backoffice">
        <thead>
            <tr>
                <th>
                    Data da Alteração
                </th>
                <th>
                    Tipo de Alteração
                </th>
                <th>
                    Descrição
                </th>
                <th>
                    Utilizador
                </th>
                <th>
                    Admin
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in alteracoesAdm)
            {
                    <tr>
                        <td>
                        @item.DataGa
                        </td>
                        <td>
                        @item.TipoAlteracao
                        </td>
                        <td>
                        @item.Descricao
                        </td>
                        <td>
                        @item.UtilizadorNome
                        </td>
                        <td>
                        @item.AdminNome
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>


