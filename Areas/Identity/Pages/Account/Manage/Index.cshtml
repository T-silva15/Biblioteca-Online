@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-row-index">
                <div class="form-group-index">
                    <div class="form-floating mb-3 ">
                        <input asp-for="Input.Username" class="form-control" value="@ViewData["username"]" placeholder="Introduza o seu Username." />
                        <label asp-for="Input.Username" class="form-label"></label>
                    </div>
                </div>

                <div class="form-group-index">
                    <div class="form-floating mb-3 ">
                        <input asp-for="Input.OldPassword" class="form-control " autocomplete="current-password" aria-required="true" placeholder="Introduza a password antiga." />
                        <label asp-for="Input.OldPassword" class="form-label"></label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-row-index" >
                @if (Model.IsEmailConfirmed)
                {
                    <div class="form-group-index">
                        <div class="form-floating mb-3 input-group ">
                            <input asp-for="Email" class="form-control " placeholder="Introduza o seu email." disabled />
                            <div class="input-group-append">
                                <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                            </div>
                            <label asp-for="Email" class="form-label"></label>
                        </div>
                    </div>
                }
                else
                {
                     <div class="form-group-index">
                        <div class="form-floating mb-3 ">
                            <input asp-for="Email" class="form-control" placeholder="Introduza o seu email." disabled />
                            <label asp-for="Email" class="form-label"></label>
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Enviar email de verificação</button>
                        </div>
                    </div>
                }

                <div class="form-group-index">
                    <div class="form-floating mb-3 ">
                        <input asp-for="Input.NewPassword" class="form-control " autocomplete="new-password" aria-required="true" placeholder="Introduza a nova password." />
                        <label asp-for="Input.NewPassword" class="form-label"></label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

			<div class="form-row-index">
                <div class="form-group-index">
                    <div class="form-floating mb-3 ">
                        <input asp-for="Input.NewEmail" class="form-control " autocomplete="email" aria-required="true" placeholder="Introduza o novo email." />
                        <label asp-for="Input.NewEmail" class="form-label"></label>
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                    </div>
                </div>
			    <div class="form-group-index">
                    <div class="form-floating mb-3 ">
                        <input asp-for="Input.ConfirmPassword" class="form-control " autocomplete="new-password" aria-required="true" placeholder="Confirme a sua password." />
					    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
					    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				    </div>
			    </div>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary-index">Guardar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
